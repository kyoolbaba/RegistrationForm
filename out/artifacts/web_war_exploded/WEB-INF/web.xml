<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>log</servlet-name>
        <servlet-class>com.user.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>log</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.user.controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.user.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.user.HttpReqLevelListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.user.ServletReqListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.user.ServerLevelListener</listener-class>
    </listener>
    <filter>
        <filter-name>filterEmail</filter-name>
        <filter-class>com.user.RegisterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filterEmail</filter-name>
        <url-pattern>/register</url-pattern>
    </filter-mapping>
</web-app>
